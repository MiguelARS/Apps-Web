@model IEnumerable<University.Models.Assignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Campus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.FirstMidName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssignmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
